---
import BurguerMenu from '../icons/BurguerMenu.astro'
---

<header id="navmenu"class="fixed left-0 top-0 right-0 z-20 bg-transparent">
    <div class="flex justify-around items-center px-2 md:px-4 xl:px-20 xl:mx-12 py-6">
        <div class="flex items-center flex-col">
            <h1>
                <a href="/" class="text-primary text-4xl md:text-5xl font-playfair font-semibold uppercase">Casaasada</a>
            </h1>
            <span class="text-primary text-[10px] md:text-[12px] uppercase font-light">Las mejores propiedades de Argentina</span>
        </div>
        <div class="flex lg:hidden">
            <BurguerMenu className="size-12 text-primary"/>
        </div>
        <nav class="hidden lg:flex gap-x-12  xl:gap-x-44 items-center">
            <ul class="flex gap-x-12 lg:ml-8 xl:ml-0">
                <li><a href="/properties" class="text-white hover:opacity-70 font-regular">Propiedades</a></li>
                <li><a href="/about-us" class="text-white hover:opacity-70 font-regular">Sobre Nosotros</a></li>
                <li><a href="/location" class="text-white hover:opacity-70 font-regular">Ubicaci√≥n</a></li>
            </ul>
            <div>
                <a href="/contacto" class="text-white uppercase font-semibold bg-primary hover:bg-secondary duration-300 border-1 rounded-custom-tl px-4 py-2">Contacto</a>
            </div>
        </nav>
    </div>
</header>

<script>
    window.addEventListener('scroll', () => {
        const menu = document.getElementById('navmenu');

    if(window.scrollY > 0) {
        menu?.classList.remove('bg-transparent');
        menu?.classList.add('bg-primary/10', 'backdrop-blur');
    } else {
        menu?.classList.remove('bg-primary/10', 'backdrop-blur');
        menu?.classList.add('bg-transparent');
    }
    })
</script>